source 'https://rubygems.org'

gemspec

# Gem management
gem 'bundler', '~> 2.4'

# Deployment tasks
gem 'rake', '~> 13.0'

# Test with RSpec
gem 'rspec', '~> 3.12'

# Ruby code linting
gem 'rubocop', '~> 1.54'

# Rubocop - rake cops
gem 'rubocop-rake', '~> 0.6'

# Rubocop - rspec cops
gem 'rubocop-rspec', '~> 3.0'

# Replay full HTTP interactions
gem 'vcr', '~> 6.2'

# Mock HTTP requests so that we're not hitting the actual Vantaca servers
gem 'webmock', '~> 3.18'
